<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondary_color"
    tools:context="com.maheshvenkat.mycalendar.activities.MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/view_margin_fifteen">

        <TextView
            android:id="@+id/textView_welcome_note"
            style="@style/textView_title_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/view_margin_fifteen"
            android:layout_marginRight="@dimen/view_margin_fifteen"
            android:text="@string/weclome_note"
            android:textColor="@color/primary_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.roundtableapps.timelinedayviewlibrary.TimeLineLayout
            android:id="@+id/timelineLayout_day_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_margin_fifteen"
            android:background="@color/secondary_color"
            android:clipToPadding="false"
            android:paddingBottom="50dp"
            app:dividerColor="@color/divider_grey"
            app:dividerTextColor="@color/primary_color"
            app:eachRowHeight="@dimen/view_twenty_five_dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_welcome_note"
            app:minimumPercentage="0.25"
            app:numberOfRows="24" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>