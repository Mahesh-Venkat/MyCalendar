<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondary_color"
    tools:context="com.maheshvenkat.mycalendar.activities.MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/view_margin_fifteen"
        android:layout_marginRight="@dimen/view_margin_fifteen"
        android:layout_marginTop="@dimen/view_margin_fifteen">

        <TextView
            android:id="@+id/textView_welcome_note"
            style="@style/textView_title_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/weclome_note"
            android:textColor="@color/primary_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView_events"
            app:layout_constraintTop_toBottomOf="@+id/textView_welcome_note"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/view_twenty_dp"
            android:layout_height="wrap_content">

        </androidx.recyclerview.widget.RecyclerView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>